{
  "manifest_version": 3,
  "name": "CurrencyNOW",
  "version": "2.0",
  "description": "Conversor de moedas em tempo real usando ExchangeRate API",
  "icons": {
    "16": "assets/icon1.png",
    "48": "assets/icon2.png",
    "128": "assets/icon3.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon1.png",
      "32": "assets/icon2.png",
      "48": "assets/icon3.png"
    },
    "default_title": "CurrencyNOW - Conversor de Moedas"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://v6.exchangerate-api.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}